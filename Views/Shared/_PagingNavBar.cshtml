<div class="content-detail-pagination cdp">
        @if (@Model.PageIndex > 0)
        {

     


            if (@Model.PageIndex > 1)
            {
                <button type="submit" name="page" href="#!-1" class="prev" style="padding: 0 16px;" value="@(@Model.PageIndex - 1)">prev</button>
                <button type="submit" name="page" href="#!1" class="cdp_i" value="1">1</button>
            }
            if (@Model.PageIndex > 4)
            {
                <p id="dots">. . .</p>
            }
            if (@Model.PageIndex == 3)
            {

            }
            for (int i = @Model.PageIndex - 2; i < @Model.PageIndex; i++)
            {
                if (i > 1)
                {
                    <button type="submit" name="page" href="#!@i" value="@i" class="cdp_i">@i</button>
                }
            }
            <button type="button" title="Click to change page size." data-toggle="modal" data-target="#pageSizeModal" id="sel" name="sel" value="@Model.PageIndex">@Model.PageIndex</button>
            for (int i = @Model.PageIndex + 1; i < @Model.PageIndex + 3; i++)
            {
                if (i < @Model.TotalPages)
                {
                    <button type="submit" name="page" href="#!@i" value="@i" class="cdp_i">@i</button>
                }
            }
            if ((@Model.PageIndex + 4) == @Model.TotalPages)
            {
                int amount = @Model.PageIndex + 3;
                <button type="submit" name="page" value="@amount" class="cdp_i">@amount</button>
            }
            else if ((@Model.PageIndex + 3) < @Model.TotalPages)
            {
                <p id="dots">. . .</p>
            }
            if (@Model.PageIndex < @Model.TotalPages)
            {
                <button type="submit" name="page" href="#!@Model.TotalPages)" class="cdp_i" value="@Model.TotalPages">@Model.TotalPages</button>
                <button type="submit" name="page" href="#!+1" class="next" style="padding: 0 16px;" value="@(@Model.PageIndex + 1)">next</button>
            }
      
        }
        <br/>
</div>

