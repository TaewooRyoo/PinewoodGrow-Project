@model PinewoodGrow.Models.Household


@{
    ViewData["Title"] = "Create";
}

<br />
<h1>Create Household Information</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LICO" /> @Html.DisplayNameFor(model => model.LICO)
                </label>
            </div>
            @*<div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>*@
            <div class="row" style="margin: 0 auto; align-content: center; justify-content:center;">
                <div class="form-group" style="padding-right: 20px">
                    <a asp-action="Index" class="btn btn-primary">Back</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info" />
                </div>
            </div>
        </form>
    </div>
</div>

@*<div>
        <a asp-action="Index">Back to List</a>
    </div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
