@model PinewoodGrow.Models.Member

@{
    ViewData["Title"] = "AddMember";
}

<h1 style="text-align:center">Create a New Member</h1>
<hr />
<form asp-action="AddMember" method="post" enctype="multipart/form-data">
	<div class="form-group">
