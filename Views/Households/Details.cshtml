@model PinewoodGrow.Models.Household

@{
    ViewData["Title"] = "Details";
}
<br />
<h1 style="text-align: center;">Household Detialed Information</h1>
<br />
<div>   
    <div class="table-responsive-lg">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.HouseIncome)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.LICO)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.HouseIncome)</td>
                    <td>@Html.DisplayFor(model => model.LICO)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row" style="margin: 0 auto; padding: 10px; justify-content:center;">
    <div class="form-group" style="padding-right: 20px">
        <a asp-action="Index" class="btn btn-primary">Back</a>
    </div>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-info">Edit</a>
    </div>
</div>
