@model PinewoodGrow.Models.Illness
<form asp-action="Create" asp-controller="Illnesses" method="post" id="createIllnessForm">
	<div class="row">
		<div class="col-md-12">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" id="submitIllnessCreate" value="Save" class="btn btn-outline-dark" />
			</div>
		</div>
	</div>
</form>
