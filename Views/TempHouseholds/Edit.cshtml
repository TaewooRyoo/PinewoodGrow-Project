                //we will pass it as a QueryString parameter when we get the new data
                var qstring = "";
                //Get the collection of currently selected options
                var skipData = $("#selectedDietOptions input[type=checkbox]");
                $.each(skipData,
                    function () {
                        if (this.checked === " checked") {
