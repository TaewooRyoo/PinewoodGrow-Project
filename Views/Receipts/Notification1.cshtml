@{
    ViewData["Title"] = "Notification Email";
}

<h1>Email Reciept</h1>

<hr />
<form asp-action="Notification1">
    <div class="row">
        <div class="col-md-8">
            <div class="text-danger">@ViewData["Message"]</div>
            <hr />
            <input type="hidden" name="id" value="@ViewData["id"]" />
            <input type="hidden" name="TrialName" value="@ViewData["ProductName"]" />
            <div class="form-group">
                <label for="Subject" class="control-label">Email Subject</label>
                <input type="text" id="Subject" name="Subject" class="form-control" />
            </div>
            
            <div class="row" style="margin: 0 auto; padding: 10px; align-content: center; justify-content:center;">
                <div class="form-group" style="padding-right: 20px">
                    <a asp-action="Index" class="btn btn-primary">Back</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>

            </div>
        </div>
    </div>
</form>
