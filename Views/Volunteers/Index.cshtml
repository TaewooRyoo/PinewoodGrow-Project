@model IEnumerable<PinewoodGrow.Models.Volunteer>

@{
	ViewData["Title"] = "Index";
}

<h1 style="text-align:center;">Volunteers</h1>

<p>
	<a asp-action="Create" class="btn btn-sm btn-info right float-right">Create Volunteer</a>
</p>
<table class="table table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					<div class="btn-group">
						<a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-info">Edit</a>
						<a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger ml-1">Delete</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
